@page "/Account/ForgotPassword"
@model Zodpovedne.Web.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Zapomenuté heslo";

    if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning">
            <h4>@Model.ErrorMessage</h4>
        </div>
        return;
    }
    if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info">
            <h4>@Model.StatusMessage</h4>
        </div>
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Zapomenuté heslo</h2>

            @if (Model.EmailSent)
            {
                <div class="alert alert-success">
                    Pokud je zadaný e-mail zaregistrován v našem systému, byl na něj odeslán odkaz pro obnovení hesla.
                    Zkontrolujte svou e-mailovou schránku (případně i spam).
                </div>
            }
            else
            {
                <p>Zadejte e-mailovou adresu spojenou s vaším účtem. Na tento e-mail vám odešleme odkaz pro obnovení hesla.</p>

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">E-mail</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <a href="/Account/Login" class="btn btn-secondary">Zpět na přihlášení</a>
                        <button type="submit" class="btn btn-primary">Odeslat odkaz pro obnovení</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>