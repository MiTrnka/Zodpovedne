@page "/Account/Login"
@model Zodpovedne.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Přihlášení";
}

<div class="container">
        <div class="col-md-4 login-wrapper shadow">
        <h2 class="mb-4 mt-2 text-center">Přihlášení</h2>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label mb-0">Email</label>
                <input asp-for="Input.Email"  class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-4">
                <label asp-for="Input.Password" class="form-label mb-0">Heslo</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <div class="mt-1">
                        <a href="/Account/ForgotPassword">Zapomněli jste heslo?</a>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 shadow mb-3">Přihlásit</button>
            </form>
        </div>
</div>