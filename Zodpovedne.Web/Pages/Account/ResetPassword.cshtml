@page
@model Zodpovedne.Web.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset hesla";

    if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning">
            <h4>@Model.ErrorMessage</h4>
        </div>
        return;
    }
    if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info">
            <h4>@Model.StatusMessage</h4>
        </div>
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Nastavení nového hesla</h2>

            @if (Model.Success)
            {
                <div class="alert alert-success">
                    <p>Vaše heslo bylo úspěšně obnoveno.</p>
                    <a href="/Account/Login" class="btn btn-primary">Přejít na přihlášení</a>
                </div>
            }
            else
            {
                <form method="post">
                    <input type="hidden" asp-for="Input.Email" />
                    <input type="hidden" asp-for="Input.Token" />

                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label">Nové heslo</label>
                        <input asp-for="Input.NewPassword" type="password" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Potvrzení hesla</label>
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <a href="/Account/Login" class="btn btn-secondary">Zpět na přihlášení</a>
                        <button type="submit" class="btn btn-primary">Nastavit nové heslo</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>