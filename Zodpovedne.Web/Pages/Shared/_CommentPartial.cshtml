@model Zodpovedne.Contracts.DTO.CommentDto

<div class="card mb-2">
    @* Hlavička komentáře s metadaty a tlačítky *@
    <div class="d-flex justify-content-between align-items-center mb-2">
        @* Levá část - informace o autorovi a času *@
        <div class="text-muted small">
            <i class="bi bi-person"></i> <a asp-page="/Account/Profile" asp-route-nickname="@Model.AuthorNickname">@Model.AuthorNickname</a>
            <span class="mx-2">•</span>
            @Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
            (@Model.UpdatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm"))
            @if (Model.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden)
            {
                @* <span class="badge bg-warning ms-2">Tvůj komentář je skrytý</span> *@
            }
            @* Má tento rootový komentář nějakou novou reakci a zároveň se na to dívá autor rootového komentáře? *@
            @if (Model.HasNewReplies && Model.AuthorNickname == Context.Session.GetString("UserNickname"))
            {
                <span class="badge bg-primary ms-2" title="Nové odpovědi">
                    <i class="bi bi-chat-dots-fill"></i> Nové
                </span>
            }
        </div>

        @* Pravá část - tlačítka pro akce *@
        <div class="d-flex align-items-center gap-2">
            @* Like tlačítko *@
            @if (Model.Likes.CanUserLike)
            {
                <button class="btn btn-sm like-btn"
                        onclick="likeComment(@Model.DiscussionId, @Model.Id)">
                    <i class="bi bi-heart"></i>
                    <span id="comment-@Model.Id-likes-count">@Model.Likes.LikeCount</span>
                </button>
            }
            else
            {
                <span class="text-muted">
                    <i class="bi bi-heart-disable"></i>
                    @Model.Likes.LikeCount
                </span>
            }

            @* Admin tlačítko pro viditelnost *@
            @if (User.IsInRole("Admin"))
            {
                <button class="btn btn-sm @(Model.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden ? "btn-warning" : "btn-outline-warning")"
                        onclick="toggleCommentVisibility(@Model.DiscussionId, @Model.Id)">
                    <i class="bi bi-eye@(Model.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden ? "" : "-slash")"></i>
                    @(Model.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden ? "Odkryj" : "Skryj")
                </button>
            }

            @* Tlačítko pro smazání rootového komentáře (viditelné pro adminy nebo autory komentářů) *@
            @if (User.IsInRole("Admin") || Model.AuthorNickname == Context.Session.GetString("UserNickname"))
            {
                <button class="btn btn-sm btn-outline-danger"
                        onclick="deleteComment(@Model.DiscussionId, @Model.Id)">
                    <i class="bi bi-trash"></i>@* Smazat *@
                </button>
            }
        </div>
    </div>

    @* Obsah komentáře *@
    <p class="mb-0">@Model.Content</p>

    @* Formulář pro odpověď na komentář *@
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div id="reply-form-@Model.Id" style="display: none;" class="mt-3">
            <form method="post" asp-page-handler="AddComment">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="ReplyToCommentId" value="@Model.Id" />
                <textarea name="NewComment.Content" class="form-control new-comment-textarea-reply" rows="2"
                            placeholder="Napište odpověď..." required></textarea>
                <div class="mt-2">
                    <button type="submit" class="btn btn-primary btn-sm submit-comment-button-reply">Odeslat</button>
                    <button type="button" class="btn btn-outline-secondary btn-sm cancel-comment-button-reply"
                            onclick="hideReplyForm(@Model.Id)">
                        Zrušit
                    </button>
                </div>
            </form>
        </div>
    }

    @* Odpovědi na komentář *@
    @foreach (var reply in Model.Replies.OrderBy(r => r.UpdatedAt))
    {
        <div class="card-body border-top ms-2 p-2">
            @* Hlavička odpovědi *@
            <div class="d-flex justify-content-between align-items-center mb-1">
                <div class="text-muted small">
                    <i class="bi bi-person"></i> <a asp-page="/Account/Profile" asp-route-nickname="@reply.AuthorNickname">@reply.AuthorNickname</a>
                    <span class="mx-1">•</span>
                    @reply.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                    (@reply.UpdatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm"))
                    @if (reply.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden)
                    {
                        @* <span class="badge bg-warning ms-2">Tvůj komentář je skrytý</span> *@
                    }
                </div>

                @* Akce pro odpověď *@
                <div class="d-flex align-items-center gap-2">
                    @* Like tlačítko pro odpověď *@
                    @if (reply.Likes.CanUserLike)
                    {
                        <button class="btn btn-sm like-btn"
                                onclick="likeComment(@Model.DiscussionId, @reply.Id)">
                            <i class="bi bi-heart"></i>
                            <span id="comment-@reply.Id-likes-count">@reply.Likes.LikeCount</span>
                        </button>
                    }
                    else
                    {
                        <span class="text-muted like-btn-disable">
                            <i class="bi bi-heart-fill"></i>
                            @reply.Likes.LikeCount
                        </span>
                    }

                    @* Admin tlačítko pro viditelnost odpovědi *@
                    @if (User.IsInRole("Admin"))
                    {
                        <button class="btn btn-sm @(reply.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden ? "btn-warning" : "btn-outline-warning")"
                                onclick="toggleCommentVisibility(@Model.DiscussionId, @reply.Id)">
                            <i class="bi bi-eye@(reply.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden ? "" : "-slash")"></i>
                            @(reply.Type == Zodpovedne.Contracts.Enums.CommentType.Hidden ? "Odkryj" : "Skryj")
                        </button>
                    }

                    @* Tlačítko pro smazání reakčního komentáře (viditelné pro adminy nebo autory komentářů) *@
                    @if (User.IsInRole("Admin") || reply.AuthorNickname == Context.Session.GetString("UserNickname"))
                    {
                        <button class="btn btn-sm btn-outline-danger"
                                onclick="deleteComment(@Model.DiscussionId, @reply.Id)">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                </div>
            </div>

            @* Obsah odpovědi *@
            <p class="mb-0">@reply.Content</p>
        </div>
    }

    @* Tlačítko pro zobrazení formuláře odpovědi *@
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="mt-3">
            <button class="btn btn-sm btn-outline-primary reply-button" onclick="showReplyForm(@Model.Id)">
                <i class="bi bi-reply-fill"></i> Odpovědět
            </button>
        </div>
    }
</div>