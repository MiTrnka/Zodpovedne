@inject IConfiguration Configuration
@inject IWebHostEnvironment Environment
@{
    // Získání aktuální cesty a její rozdělení na části
    var currentPath = ViewContext.RouteData.Values["Page"]?.ToString() ?? "";

    // Funkce pro určení, zda je položka menu aktivní
    bool IsMenuItemActive(string pagePath)
    {
        if (pagePath == "/Categories")
        {
            // Pro sekci diskuzí považujeme za aktivní i všechny podstránky kategorií
            return currentPath.StartsWith("/Categories") ||
                   currentPath.StartsWith("/Discussion") ||
                   currentPath.StartsWith("/Category");
        }

        // Pro ostatní položky menu přesná shoda cesty
        return currentPath == pagePath;
    }
}
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mámou zodpovědně</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/catalogs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ckeditor-content.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Místo pro připadné modální upozornění/chybovou hlášku -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Upozornění</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>
                <div class="modal-body" id="modalMessage">
                    <!-- Zde se zobrazí chybová zpráva -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-xl navbar-light">
        <div class="site-header">
            <div class="logo-container"> <!-- MZ: logo.png  -->
                <a asp-page="/Index"><img src="/images/logo1svg.svg" alt="logo Freediscussions" style="width: 200px; height: auto;"></a>
            </div>
        </div>
        <div class="container flex">
            <!-- Toggle button pro mobilní menu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-xl-inline-flex justify-content-between" id="navbarContent" style="z-index: 1050; top: 100%; width: 95%;">


                <!-- Levá část menu -->
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link @(IsMenuItemActive("/Categories") ? "active" : "")"
                        asp-page="/Categories">Diskuze</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsMenuItemActive("/Katalog/Hracky") ? "active" : "")"
                        asp-page="/katalog/hracky">Hračky</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsMenuItemActive("/Katalog/Obleceni") ? "active" : "")"
                        asp-page="/katalog/obleceni">Oblečení</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(IsMenuItemActive("/Katalog/Elektronika") ? "active" : "")"
                        asp-page="/katalog/elektronika">Elektronika</a>
                    </li>
                </ul>

                <!-- Fulltext search -->
                <form class="d-flex fulltextForm" action="/Search" method="get">
                    <input class="form-control fulltextFormInput" type="search" name="query" placeholder="Vyhledat v diskusích..." aria-label="Vyhledat">
                    <button class="btn btn-primary fulltextFormBtn" type="submit">Hledat</button>
                </form>

                <!-- Pravá část menu -->
                <ul class="navbar-nav">
                    @if (Context.Session.GetString("JWTToken") != null)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(IsMenuItemActive("/Admin/Users") ? "active" : "")"
                                asp-page="/Admin/Users">Uživatelé</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsMenuItemActive("/Account/RegisterAdmin") ? "active" : "")"
                                asp-page="/Account/RegisterAdmin"
                                asp-route-returnUrl="@Context.Request.Path">Registrovat dalšího admina</a>
                            </li>
                        }
                        <!-- Ikona zpráv -->
                        <li class="nav-item">
                            <a class="nav-link position-relative nav-link @(IsMenuItemActive("/Messages") ? "active" : "")" href="/Messages" id="messages-link">
                                <i class="bi bi-envelope nav-icon" id="messages-icon"></i>
                                <span id="messages-badge" class="position-absolute top-0 translate-middle badge rounded-pill bg-danger d-none">
                                    <span id="messages-count">0</span>
                                    <span class="visually-hidden">nepřečtených zpráv</span>
                                </span>
                            </a>
                        </li>
                        <!-- Notifikační zvoneček s dropdown menu -->
                        <li class="nav-item dropdown position-relative" id="notifications-container">
                            <a class="nav-link" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-bell" id="notification-bell"></i>
                                <span class="position-absolute top-0 translate-middle badge rounded-pill bg-danger d-none" id="notification-badge">
                                    <span id="notifications-count">0</span>
                                </span>
                            </a>
                            <div class="dropdown-menu start-50 position-absolute translate-middle-x" aria-labelledby="notificationsDropdown" id="notifications-dropdown">
                                <div class="p-2" id="notifications-header">
                                    <h6 class="dropdown-header">Nové odpovědi</h6>
                                </div>
                                <div id="notifications-list" style="max-height: 300px; overflow-y: auto;">
                                    <!-- Seznam notifikací se načte dynamicky -->
                                    <div class="text-center p-2">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Načítání...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <!-- Účet přihlášeného uživatele s notifikací pro nové žádosti o přátelství -->
                        <li class="position-relative nav-item account-icon-text nav-link @(IsMenuItemActive("/Account/MyProfile") ? "active" : "")" style="cursor: pointer;">
                            <i id="user-icon" class="bi bi-person"></i>
                            <span id="friendship-badge" class="position-absolute top-0 translate-middle badge rounded-pill bg-danger d-none" style="font-size: 0.5rem;margin-right:-3px; margin-top: 7px;">
                                <span id="friendship-count">0</span>
                                <span class="visually-hidden">žádostí o přátelství</span>
                            </span>
                        <!-- Můj profil -->
                            <a class="user-name"
                            asp-page="/Account/MyProfile">@Context.Session.GetString("UserNickname")</a>
                        </li>
                        <!-- Odhlásit -->
                        <li class="nav-item odhlasit-menu">
                            <a class="nav-link" asp-page="/Account/Logout">Odhlásit se</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(IsMenuItemActive("/Account/Register") ? "active" : "")"
                            asp-page="/Account/Register"
                            asp-route-returnUrl="@Context.Request.Path">Registrovat se</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsMenuItemActive("/Account/Login") ? "active" : "")"
                            asp-page="/Account/Login"
                            asp-route-returnUrl="@Context.Request.Path">Přihlásit se</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (/*!Environment.IsDevelopment()*/ Environment.ApplicationName=="blabla")
        {
            // Zobrazení upozornění o údržbě webu
            <div class="maintenanceNotification">
                <div class="maintenance-text-wrapper">
                    <button type="button" class="close-notification" aria-label="Zavřít">
                        ×
                    </button>
                    <p class="maintenanceText">Web je teprve ve vývojí, pracujeme na něm, děkujeme za Vaši trpělivost a pochopení.</p>
                </div>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Zodpovedne.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @if (Context.Session.GetString("JWTToken") != null)
    {
        <!-- Skrytý input pro API URL potřebný pro JS -->
        <input type="hidden" id="apiBaseUrl" value="@Configuration["PublicApiBaseUrl"]">
        <!-- Import Bootstrap ikon -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <!-- Import notifikačního skriptu -->
        <script src="~/js/notifications.js" asp-append-version="true"></script>
        <script>
            // Uložení JWT tokenu do sessionStorage pro použití v JS
            sessionStorage.setItem('JWTToken', '@Context.Session.GetString("JWTToken")');
        </script>
    }
</body>
</html>
