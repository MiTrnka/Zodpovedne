@inject IConfiguration Configuration
@inject IWebHostEnvironment Environment
@{
    // Získání aktuální cesty a její rozdělení na části
    var currentPath = ViewContext.RouteData.Values["Page"]?.ToString() ?? "";

    // Funkce pro určení, zda je položka menu aktivní
    bool IsMenuItemActive(string pagePath)
    {
        if (pagePath == "/")
        {
            // Kořenová cesta nebo Index - aktivní pro úvodní stránku
            return currentPath == "/Index" || currentPath == "";
        }

        if (pagePath == "/Categories")
        {
            // Pro sekci diskuzí považujeme za aktivní i všechny podstránky kategorií
            return currentPath.StartsWith("/Categories") ||
                   currentPath.StartsWith("/Discussion") ||
                   currentPath.StartsWith("/Category");
        }

        // Pro ostatní položky menu přesná shoda cesty
        return currentPath == pagePath;
    }
}
<!DOCTYPE html>
<html lang="cs">
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17122356583"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'AW-17122356583');
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO meta tagy (s diakritikou pro Google) -->
    <meta name="description" content="@(ViewData["Description"] ?? "Discussion.cz - česká diskuzní sociální síť bez reklam. Připojte se ke komunitě, diskutujte s přáteli a sdílejte názory v bezpečném prostředí.")" />
    <meta name="keywords" content="@(ViewData["Keywords"] ?? "diskuze, diskuzi, česká sociální síť, ceska socialni sit, komunita, bez reklam, fórum, forum, discussion, bez reklamy, bez reklam, zdarma, síť, sit, sociální síť, socialni sit, diskuzni socialni sit, diskuzní sociální síť")" />
    <meta name="robots" content="@(ViewData["Robots"] ?? "index, follow")" />
    <meta name="author" content="Discussion.cz" />
    <meta name="language" content="cs" />
    <meta name="geo.region" content="CZ" />
    <meta name="geo.country" content="Czech Republic" />

    <!-- Open Graph meta tagy pro sociální sítě (bez diakritiky) -->
    <meta property="og:title" content="@(ViewData["OGTitle"] ?? ViewData["Title"] ?? "Discussion.cz - Ceska diskuzni socialni sit")" />
    <meta property="og:description" content="@(ViewData["OGDescription"] ?? ViewData["Description"] ?? "Ceska diskuzni socialni sit bez reklam. Pripojte se ke komunite a diskutujte s prateli.")" />
    <meta property="og:image" content="@Configuration["BaseUrl"]/images/discussion-logo.png" />
    <meta property="og:url" content="@Configuration["BaseUrl"]@Context.Request.Path" />
    <meta property="og:type" content="@(ViewData["OGType"] ?? "website")" />
    <meta property="og:site_name" content="Discussion.cz" />
    <meta property="og:locale" content="cs_CZ" />

    <!-- Twitter Card (také bez diakritiky) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@(ViewData["OGTitle"] ?? ViewData["Title"] ?? "Discussion.cz - Ceska diskuzni socialni sit")" />
    <meta name="twitter:description" content="@(ViewData["OGDescription"] ?? ViewData["Description"] ?? "Ceska diskuzni socialni sit bez reklam")" />
    <meta name="twitter:image" content="@Configuration["BaseUrl"]/images/discussion-logo.png" />

    <!-- Dodatečné meta tagy pro články (jen pokud jsou nastaveny) -->
    @if (!string.IsNullOrEmpty(ViewData["ArticleAuthor"]?.ToString()))
    {
        <meta property="article:author" content="@ViewData["ArticleAuthor"]" />
        <meta property="article:published_time" content="@ViewData["ArticlePublishedTime"]" />
        <meta property="article:modified_time" content="@ViewData["ArticleModifiedTime"]" />
    }

    <!-- Canonical URL -->
    <link rel="canonical" href="@(ViewData["CanonicalUrl"]?.ToString() ?? (Configuration["BaseUrl"] ?? "") + Context.Request.Path.ToString())" />

    <!-- Alternate pro jiné jazyky -->
    <link rel="alternate" hreflang="cs" href="@Configuration["BaseUrl"]@Context.Request.Path" />
    <link rel="alternate" hreflang="x-default" href="@Configuration["BaseUrl"]@Context.Request.Path" />

    <!-- Title tag -->
    <title>@(ViewData["Title"] != null ? ViewData["Title"] + " | Discussion.cz" : "Discussion.cz - Česká diskuzní sociální síť")</title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/catalogs.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ckeditor-content.css" asp-append-version="true" />
    <!-- Favicon -->
    @if ((Configuration["SiteInstance"] != null) && (Configuration["SiteInstance"] == "discussion.cz"))
    {
        <link rel="icon" type="image/png" href="~/images/favicondiscussion.png" sizes="32x32">
    }
    @if ((Configuration["SiteInstance"] != null) && (Configuration["SiteInstance"] == "mamouzodpovedne.cz"))
    {
        <link rel="icon" type="image/png" href="~/images/faviconmamouzodpovedne.png" sizes="32x32">
    }
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">

    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "WebSite",
          "name": "Discussion.cz",
          "url": "@Configuration["BaseUrl"]",
          "description": "Česká diskuzní sociální síť bez reklam",
          "inLanguage": "cs-CZ",
          "potentialAction": {
            "@@type": "SearchAction",
            "target": "@(Configuration["BaseUrl"])/Search?query={search_term_string}",
            "query-input": "required name=search_term_string"
          }
        }
    </script>

    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "Organization",
          "name": "Discussion.cz",
          "url": "@Configuration["BaseUrl"]",
          "logo": "@(Configuration["BaseUrl"])/images/discussion-logo.svg",
          "description": "Česká diskuzní sociální síť zaměřená na kvalitní diskuze bez reklam",
          "foundingDate": "2025",
          "founder": {
            "@@type": "Person",
            "name": "Discussion.cz"
          },
          "knowsAbout": ["diskuze", "sociální síť", "komunita", "česká síť"],
          "serviceType": "Sociální síť"
        }
    </script>

    @* Prev/Next pro stránkování *@
    @if (!string.IsNullOrEmpty(ViewData["PrevPageUrl"]?.ToString()))
    {
        <link rel="prev" href="@ViewData["PrevPageUrl"]" />
    }
    @if (!string.IsNullOrEmpty(ViewData["NextPageUrl"]?.ToString()))
    {
        <link rel="next" href="@ViewData["NextPageUrl"]" />
    }

    @* Robots meta tag pro stránkování *@
    @if (ViewData["IsFirstPage"]?.ToString() == "False")
    {
        <meta name="robots" content="noindex, follow" />
    }
</head>
<body>
    <!-- Místo pro připadné modální upozornění/chybovou hlášku -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Upozornění</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>
                <div class="modal-body" id="modalMessage">
                    <!-- Zde se zobrazí chybová zpráva -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-xl navbar-light">
        <div class="site-header">
            <div class="logo-container"> <!-- MZ: logo.png  -->
                <a asp-page="/Index"><img src="/images/discussion-logo.svg" alt="logo Discussion" style="width: 200px; height: auto;"></a>
            </div>
        </div>
        <div class="container flex">
            <!-- Toggle button pro mobilní menu -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
            aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                <span id="hamburger-menu-notification" class="d-none"></span>
            </button>
            <div class="navbar-collapse collapse d-xl-inline-flex justify-content-between" id="navbarContent" style="z-index: 1050; top: 100%; width: 95%;">


                <!-- Levá část menu -->
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link @(IsMenuItemActive("/Categories") ? "active" : "")"
                           asp-page="/Categories" style="padding:7px 40px;">Diskuze</a>
                    </li>
                    @if (Context.Session.GetString("JWTToken") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(currentPath == "/Index" || currentPath == "" ? "active" : "")"
                               asp-page="/Index" style="padding:7px 40px;">Novinky</a>
                        </li>
                    }
                    @if ((Configuration["SiteInstance"] != null) && (Configuration["SiteInstance"] == "mamouzodpovedne.cz"))
                    {
                        <li class="nav-item">
                            <a class="nav-link @(IsMenuItemActive("/Katalog/Hracky") ? "active" : "")"
                               asp-page="/katalog/hracky" style="padding:7px 40px;">Hračky</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsMenuItemActive("/Katalog/Obleceni") ? "active" : "")"
                               asp-page="/katalog/obleceni" style="padding:7px 40px;">Oblečení</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsMenuItemActive("/Katalog/Elektronika") ? "active" : "")"
                               asp-page="/katalog/elektronika" style="padding:7px 40px;">Elektronika</a>
                        </li>
                    }
                </ul>

                <!-- Fulltext search -->
                <form class="d-flex fulltextForm" action="/Search" method="get">
                    <input class="form-control fulltextFormInput" type="search" name="query" placeholder="Vyhledat v diskusích..." aria-label="Vyhledat">
                    <button class="btn btn-primary fulltextFormBtn" type="submit">Hledat</button>
                </form>

                <!-- Pravá část menu -->
                <ul class="navbar-nav menu-right-section">
                    @if (Context.Session.GetString("JWTToken") != null)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(IsMenuItemActive("/Admin/Users") ? "active" : "")"
                                   asp-page="/Admin/Users" style="padding:7px 40px;">Uživatelé</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(IsMenuItemActive("/Account/RegisterAdmin") ? "active" : "")"
                                asp-page="/Account/RegisterAdmin"
                                   asp-route-returnUrl="@Context.Request.Path" style="padding:7px 40px;">Registrovat dalšího admina</a>
                            </li>
                        }
                        <!-- Ikona zpráv -->
                        <li class="nav-item">
                            <a class="nav-link position-relative nav-link @(IsMenuItemActive("/Messages") ? "active" : "")" href="/Messages" id="messages-link">
                                <div class="position-relative menu-icon-wrapper">
                                    <i class="bi bi-envelope nav-icon" id="messages-icon"></i>
                                    <span id="messages-badge" class="position-absolute  badge rounded-pill bg-danger d-none">
                                        <span id="messages-count">0</span>
                                        <span class="visually-hidden">nepřečtených zpráv</span>
                                    </span>
                                </div>

                            </a>
                        </li>
                        <!-- Notifikační zvoneček s dropdown menu -->
                        <li class="nav-item dropdown position-relative d-flex" id="notifications-container" >
                            <a class="nav-link" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="position-relative menu-icon-wrapper">
                                    <i class="bi bi-bell" id="notification-bell"></i>
                                    <span class="position-absolute badge rounded-pill bg-danger d-none" id="notification-badge">
                                        <span id="notifications-count">0</span>
                                    </span>
                                </div>
                            </a>
                            <div class="dropdown-menu start-50 position-absolute translate-middle-x" aria-labelledby="notificationsDropdown" id="notifications-dropdown">
                                <div class="p-2" id="notifications-header">
                                    <h6 class="dropdown-header">Nové odpovědi</h6>
                                </div>
                                <div id="notifications-list" style="max-height: 300px; overflow-y: auto;">
                                    <!-- Seznam notifikací se načte dynamicky -->
                                    <div class="text-center p-2">
                                        <div class="spinner-border spinner-border-sm" role="status">
                                            <span class="visually-hidden">Načítání...</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <!-- Účet přihlášeného uživatele s notifikací pro nové žádosti o přátelství -->
                        <li class="position-relative menu-icon-wrapper nav-item account-icon-text @(IsMenuItemActive("/Account/MyAccount") ? "active" : "")" style="cursor: pointer;">

                        <!-- Můj profil -->
                            <a class="user-name nav-link"
                               asp-page="/Account/MyAccount">
                                <div class="menu-icon-wrapper">
                                    <i id="user-icon" class="bi bi-person"></i>@Context.Session.GetString("UserNickname")
                                    <span id="friendship-badge" class="position-absolute badge rounded-pill bg-danger d-none">
                                        <span id="friendship-count">0</span>
                                        <span class="visually-hidden">žádostí o přátelství</span>
                                    </span>
                                </div>
                            </a>
                        </li>
                        <!-- Odhlásit -->
                        <li class="nav-item odhlasit-menu">
                            <a class="nav-link" asp-page="/Account/Logout" style="padding:7px 40px;">Odhlásit se</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(IsMenuItemActive("/Account/Register") ? "active" : "")"
                            asp-page="/Account/Register"
                               asp-route-returnUrl="@Context.Request.Path" style="padding:7px 40px;">Registrovat se</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(IsMenuItemActive("/Account/Login") ? "active" : "")"
                            asp-page="/Account/Login"
                               asp-route-returnUrl="@Context.Request.Path" style="padding:7px 40px;">Přihlásit se</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (/*!Environment.IsDevelopment()*/ Environment.ApplicationName=="blabla")
        {
            // Zobrazení upozornění o údržbě webu
            <div class="maintenanceNotification">
                <div class="maintenance-text-wrapper">
                    <button type="button" class="close-notification" aria-label="Zavřít">
                        ×
                    </button>
                    <p class="maintenanceText">Web je teprve ve vývojí, pracujeme na něm, děkujeme za Vaši trpělivost a pochopení.</p>
                </div>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer role="contentinfo" class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p>&copy; 2025 Discussion.cz - Česká diskuzní sociální síť</p>
                    <p class="mb-2"><small>Provozovatel: Michal Trnka | Kontakt: mitrnka@gmail.com</small></p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @if (Context.Session.GetString("JWTToken") != null)
    {
        <!-- Skrytý input pro API URL potřebný pro JS -->
        <input type="hidden" id="apiBaseUrl" value="@Configuration["PublicApiBaseUrl"]">
        <!-- Import Bootstrap ikon -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <!-- Import notifikačního skriptu -->
        <script src="~/js/notifications.js" asp-append-version="true"></script>
        <script>
            // Uložení JWT tokenu do sessionStorage pro použití v JS
            sessionStorage.setItem('JWTToken', '@Context.Session.GetString("JWTToken")');
        </script>
    }
</body>
</html>
