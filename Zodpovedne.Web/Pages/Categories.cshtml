@page "/categories"
@model CategoriesModel
@{
    ViewData["Title"] = "Kategorie";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Kategorie</h1>
        </div>
    </div>

    @if (Model.Categories.Any())
    {
        <div class="row">
            @foreach (var category in Model.Categories.OrderBy(c => c.DisplayOrder))
            {
                <div class="col-12 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/categories/@category.Code" class="text-decoration-none">@category.Name</a>
                            </h5>
                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <p class="card-text">@category.Description</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-info">
                    Žádné kategorie nebyly nalezeny.
                </div>
            </div>
        </div>
    }
</div>