@*
    Partial View pro zobrazení jedné karty hračky.
*@
@model Zodpovedne.Contracts.DTO.KatalogDetailDto
@{
}
<div class="card h-100 col-lg-3 col-md-6 col-sm-12 mb-4 p-4 border rounded-0 bg-transparent"
     onmouseover="this.classList.add('shadow'); this.classList.add('bg-white');"
     onmouseout="this.classList.remove('shadow'); this.classList.remove('bg-white');">
    <div class="card-header rounded-0 bg-transparent">
        <h5 class="card-title mb-0">@Model.Name</h5>
    </div>
    <img src="@Model.ImageUrl" class="card-img-top rounded-0" alt="Dřevěné kostky">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
            <span class="badge" style="background-color: var(--primary-pink)">Věk: 3+</span>
            <span class="text-success fw-bold">@Model.Price Kč</span>
        </div>
        <button class="btn btn-primary mt-2 w-100">Přejít do obchodu</button>
    </div>
</div>

