<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zodpovedne.MAUIApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Test volání GraphQL API"
                FontSize="32"
                HorizontalOptions="Center" />

            <Button
                x:Name="CallApiButton"
                Text="Zavolej API a načti zprávy"
                Clicked="OnCallApiButtonClicked"
                HorizontalOptions="Center" />

            <Label
                x:Name="ResultLabel"
                Text="Čekám na data z API..."
                FontSize="18"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>