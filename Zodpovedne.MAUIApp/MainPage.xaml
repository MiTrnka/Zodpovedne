<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Zodpovedne.MAUIApp.ViewModels"
             xmlns:models="clr-namespace:Zodpovedne.MAUIApp.Models"
             x:Class="Zodpovedne.MAUIApp.MainPage"
             x:DataType="viewmodels:ChatViewModel"
             Title="Jednoduchý Chat">

    <Grid RowDefinitions="Auto, *">
        <VerticalStackLayout Grid.Row="0" Padding="10" Spacing="5">
            <Label Text="Vaše přezdívka:" />
            <Entry Placeholder="Zadejte přezdívku" Text="{Binding Nickname}" />

            <Label Text="Zpráva:" Margin="0,10,0,0" />
            <Entry Placeholder="Napište zprávu..." Text="{Binding MessageText}" />

            <Button Text="Odeslat zprávu" Command="{Binding SendMessageCommand}" Margin="0,10,0,0"/>
        </VerticalStackLayout>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Messages}" Margin="10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:FreeMessage">
                    <Border Padding="10" 
                            Margin="0,5"
                            Stroke="LightGray"
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="8" />
                        </Border.StrokeShape>

                        <VerticalStackLayout>
                            <Label Text="{Binding Nickname}" FontAttributes="Bold" />
                            <Label Text="{Binding Text}" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>